#!/bin/bash -x

set -euo pipefail
IFS=$'\n\t'

rm -rf /tmp/Test2-Tools-URL /tmp/Alien-Build

cpanm -n Dist::Zilla


git clone --depth 2 https://github.com/plicease/Test2-Tools-URL.git /tmp/Test2-Tools-URL
cd /tmp/Test2-Tools-URL
dzil authordeps --missing | cpanm -n
dzil listdeps   --missing | cpanm -n
dzil install --install-command 'cpanm -n .'

git clone --depth 2 https://github.com/Perl5-Alien/Alien-Build.git /tmp/Alien-Build
cd /tmp/Alien-Build
dzil authordeps --missing | cpanm -n
dzil listdeps   --missing | cpanm -n
dzil install --install-command 'cpanm -n .'
